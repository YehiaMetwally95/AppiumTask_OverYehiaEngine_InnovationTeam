name: SauceLabs Parallel Tests

on:
  workflow_dispatch:

jobs:
  Successful_Login_Test:
    runs-on: ubuntu-latest
    continue-on-error: true

    steps:
      - name: Checkout code
        uses: actions/checkout@v4.2.0

      - name: Setup JDK 21
        uses: actions/setup-java@v4
        with:
          distribution: 'zulu'
          java-version: '21'

      - name: Set up Maven
        uses: stCarolas/setup-maven@v5
        with:
          maven-version: 3.9.4

      - name: Run tests
        continue-on-error: true
        run: >
          mvn clean test -Dtest="testCasesByNativeAndroidActions.LoginTests#successfulLogin"
          -DappiumExecutionType="SauceLabs"
          -DAppiumServerURL="https://ondemand.eu-central-1.saucelabs.com:443/wd/hub"
          -DappType="NativeAndroid"
          -DdeviceName="Samsung Galaxy S23 FE"
          -DsyncWithDB="false"

      - name: Upload allure-results file in Target Directory
        uses: actions/upload-artifact@v4
        with:
          name: target-allure-results-successfulLogin
          path: target/allure-results

      - name: Generate Allure report
        run: mvn allure:report
      - name: Copy patch file to allure-maven-plugin folder
        run: cp src/main/resources/allow-file-access_open-report_chrome_windows.bat target/site/allure-maven-plugin
      - name: Upload Allure Report
        uses: actions/upload-artifact@v4
        with:
          name: Allure Report Successful_Login_Test
          path: "target/site/allure-maven-plugin"

  Failed_Login_Test_1:
    runs-on: ubuntu-latest
    continue-on-error: true

    steps:
      - name: Checkout code
        uses: actions/checkout@v4.2.0

      - name: Setup JDK 21
        uses: actions/setup-java@v4
        with:
          distribution: 'zulu'
          java-version: '21'

      - name: Set up Maven
        uses: stCarolas/setup-maven@v5
        with:
          maven-version: 3.9.4

      - name: Run tests
        continue-on-error: true
        run: >
          mvn clean test -Dtest="testCasesByNativeAndroidActions.LoginTests#invalidUserLogin"
          -DappiumExecutionType="SauceLabs"
          -DAppiumServerURL="https://ondemand.eu-central-1.saucelabs.com:443/wd/hub"
          -DappType="NativeAndroid"
          -DdeviceName="Samsung Galaxy S23 FE"
          -DsyncWithDB="false"

      - name: Upload allure-results file in Target Directory
        uses: actions/upload-artifact@v4
        with:
          name: target-allure-results-failedLogin-1
          path: target/allure-results

      - name: Generate Allure report
        run: mvn allure:report
      - name: Copy patch file to allure-maven-plugin folder
        run: cp src/main/resources/allow-file-access_open-report_chrome_windows.bat target/site/allure-maven-plugin
      - name: Upload Allure Report
        uses: actions/upload-artifact@v4
        with:
          name: Allure Report Failed_Login_Test_1
          path: "target/site/allure-maven-plugin"


  Failed_Login_Test_2:
    runs-on: ubuntu-latest
    continue-on-error: true

    steps:
      - name: Checkout code
        uses: actions/checkout@v4.2.0

      - name: Setup JDK 21
        uses: actions/setup-java@v4
        with:
          distribution: 'zulu'
          java-version: '21'

      - name: Set up Maven
        uses: stCarolas/setup-maven@v5
        with:
          maven-version: 3.9.4

      - name: Run tests
        continue-on-error: true
        run: >
          mvn clean test -Dtest="testCasesByNativeAndroidActions.LoginTests#lockedUserLogin"
          -DappiumExecutionType="SauceLabs"
          -DAppiumServerURL="https://ondemand.eu-central-1.saucelabs.com:443/wd/hub"
          -DappType="NativeAndroid"
          -DdeviceName="Samsung Galaxy S23 FE"
          -DsyncWithDB="false"

      - name: Upload allure-results file in Target Directory
        uses: actions/upload-artifact@v4
        with:
          name: target-allure-results-failedLogin-2
          path: target/allure-results

      - name: Generate Allure report
        run: mvn allure:report
      - name: Copy patch file to allure-maven-plugin folder
        run: cp src/main/resources/allow-file-access_open-report_chrome_windows.bat target/site/allure-maven-plugin
      - name: Upload Allure Report
        uses: actions/upload-artifact@v4
        with:
          name: Allure Report Failed_Login_Test_2
          path: "target/site/allure-maven-plugin"

  Combine_Allure_Reports:
    runs-on: ubuntu-latest
    needs: [Successful_Login_Test,Failed_Login_Test_1,Failed_Login_Test_2]
    if: always()

    steps:
      - name: Checkout code
        uses: actions/checkout@v4.2.0

      - name: Install Allure
        run: |
          # Download and unzip Allure
          curl -o allure.zip -L "https://github.com/allure-framework/allure2/releases/latest/download/allure-2.32.0.zip"
          unzip allure.zip
          sudo mv allure-2.32.0 /opt/allure  # Move the whole directory
          echo "/opt/allure/bin" >> $GITHUB_PATH  # Add Allure to the PATH

      # Download all Allure Files generated after every job
      - name: Download Allure results from Successful_Login_Test
        uses: actions/download-artifact@v4
        with:
          name: target-allure-results-successfulLogin
          path: ./target-allure-results-successfulLogin
        continue-on-error: true

      - name: Download Allure results from Failed_Login_Test_1
        uses: actions/download-artifact@v4
        with:
          name: target-allure-results-failedLogin-1
          path: ./target-allure-results-failedLogin-1
        continue-on-error: true

      - name: Download Allure results from Failed_Login_Test_2
        uses: actions/download-artifact@v4
        with:
          name: target-allure-results-failedLogin-2
          path: ./target-allure-results-failedLogin-2
        continue-on-error: true

      # Combine all Allure Files of all Jobs into one directory
      - name: Combine Successful_Login_Test Allure results into Combined Directory
        run: |
          mkdir -p ./allure-results
          cp -r ./target-allure-results-successfulLogin/* ./allure-results/
        continue-on-error: true
      - name: Combine Failed_Login_Test_1 Allure results into Combined Directory
        run: |
          mkdir -p ./allure-results
          cp -r ./target-allure-results-failedLogin-1/* ./allure-results/
        continue-on-error: true
      - name: Combine Failed_Login_Test_2 Allure results into Combined Directory
        run: |
          mkdir -p ./allure-results
          cp -r ./target-allure-results-failedLogin-2/* ./allure-results/
        continue-on-error: true

      # Generate the Allure Report from the Combined Directory
      - name: Generate Allure report
        run: allure generate ./allure-results --clean -o ./allure-report

      - name: Copy patch file to allure-maven-plugin folder
        run: cp src/main/resources/allow-file-access_open-report_chrome_windows.bat ./allure-report

      - name: Upload Combined Allure Report
        uses: actions/upload-artifact@v4
        with:
          name: Combined Allure Report
          path: ./allure-report
